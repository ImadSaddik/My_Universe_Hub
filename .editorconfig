# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{js,vue,json,jsonc,html,css,scss,md,yaml,yml}]
indent_style = tab
tab_width = 2

[*.md]
trim_trailing_whitespace = false
